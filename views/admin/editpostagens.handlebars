{{#each log}}
    <div class=" alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <dir class="card-body">
        <h4>Editar postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{listaPostagens._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class= "form-control" value="{{listaPostagens.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{listaPostagens.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{listaPostagens.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required>{{listaPostagens.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each listaCategorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <br>
            <button class="btn btn-success" type="submit">Editar postagem</button>
        </form>
    </dir>
</div>